@model CryptoFoi.Models.CipherViewModel

@{
    ViewBag.Title = "Crypto";
}

<h2>Crypto</h2>


@using (Html.BeginForm("Crypto",
                        "Home",
                        FormMethod.Post,
                        new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="text-danger control-label">@Model.FileError</label>
        </div>

        <div class="form-group">
            @Html.Label("File", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <label class="btn btn-default btn-file">
                    Browse <input type="file" name="file" style="display: none;" accept=".txt">
                </label>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Method, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Method, Model.CryptMethods, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <input type="submit" value="Encrypt" class="btn btn-info" />
            </div>
            <div class="col-md-2">
                <input type="submit" value="Decrypt" class="btn btn-danger" />
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MessageHash, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.MessageHash)
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
